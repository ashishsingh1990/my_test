.container.div_pad
  .col-md-12
    .form-area
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        %br{:style => "clear:both"}/
        %h3{:style => "margin-bottom: 25px; text-align: center;"} Forgot your password?
        .form-group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: "form-control"
        .actions
          = f.submit "Send me reset password instructions", class: "btn btn-primary pull-right"
      = render "devise/shared/links"
