.container.div_pad
  .col-md-12
    .form-area
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        %br{:style => "clear:both"}/
        %h3{:style => "margin-bottom: 25px; text-align: center;"} Login
        .form-group
          = f.text_field :login, autofocus: true, autocomplete: "email", :placeholder => "email or username", :required => "", class: "form-control"
        .form-group
          = f.password_field :password, autocomplete: "off", :placeholder => "password", :required => "", class: "form-control"
        - if devise_mapping.rememberable?
          .form-group
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Log in", class: "btn btn-primary pull-right"
      = render "devise/shared/links"
